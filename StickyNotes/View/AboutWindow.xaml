<Controls:MetroWindow
    x:Class="StickyNotes.View.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StickyNotes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prop="clr-namespace:StickyNotes.Properties"
    Width="200"
    Height="250"
     GlowBrush="{DynamicResource MahApps.Brushes.Accent2}"
    FontFamily="{StaticResource LatoBold}"
    ShowInTaskbar="False"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    ShowTitleBar="False"
    Topmost="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">


    <Grid Margin="10,15,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>


        <StackPanel Grid.Row="2">
            <Border
                Margin="0,0,0,5"
                BorderBrush="Black"
                BorderThickness="0,3,0,0">
                <StackPanel>
                    <Label
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        FontFamily="Microsoft YaHei UI"
                        FontWeight="Bold">
                        关于
                    </Label>
                    <TextBlock
                        Margin="5"
                        FontFamily="{StaticResource FontAwesome}"
                        TextWrapping="WrapWithOverflow">
                        使用过程中出现什么bug或者你有什么好的建议，欢迎在github链接中提issue.
                    </TextBlock>
                    <!--<Label FontFamily="{StaticResource FontAwesome}">减少字体大小 Ctrl+Alt+↓</Label>-->
                </StackPanel>
            </Border>


            <Border BorderBrush="Black" BorderThickness="0,3,0,0">
                <StackPanel>
                    <Label
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        FontFamily="Microsoft YaHei UI"
                        FontWeight="Bold">
                        项目地址
                    </Label>
                    <Label FontFamily="{StaticResource FontAwesome}">
                        <Hyperlink Click="Hyperlink_Click" NavigateUri="https://github.com/li-zheng-hao/StickyNotes">
                            <TextBlock Text="Github地址" TextWrapping="Wrap" />
                        </Hyperlink>
                    </Label>
                    <Label FontFamily="{StaticResource FontAwesome}">
                        <TextBlock Text="后续更新都会在上面发布，好用的话点个Star吧~" TextWrapping="Wrap" />
                    </Label>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Label HorizontalAlignment="Right" FontFamily="{StaticResource FontAwesome}">
                            <TextBlock Text="版本信息:" TextWrapping="Wrap" />
                        </Label>
                        <Label HorizontalAlignment="Right" FontFamily="{StaticResource FontAwesome}">
                            <TextBlock Text="{x:Static prop:Resources.Version}" TextWrapping="Wrap" />
                        </Label>
                    </StackPanel>


                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>
</Controls:MetroWindow>
