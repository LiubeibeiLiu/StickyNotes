                <TextBox>111</TextBox>
                <TextBox>111</TextBox>
                <TextBox>111</TextBox>
                <TextBox>111</TextBox>
                <TextBox>111</TextBox>
                <TextBox>111</TextBox>

            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label>10%</Label>
            <mah:MetroProgressBar Value="60" Orientation="Horizontal" />
        </StackPanel>
      
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center"
                    
                    >
            <Button Click="Button_Click"  Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Margin="10 5 10 5 " MaxWidth="120">Open Message</Button>
            <Button Click="Button_Click"
                    Style="{DynamicResource MahApps.Styles.Button.MetroSquare}"
                    Margin="100 5 10 5" MaxWidth="120">Close Message</Button>
        </StackPanel>

    </Grid>
